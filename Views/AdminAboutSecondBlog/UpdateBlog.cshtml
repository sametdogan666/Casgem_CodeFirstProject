@model Casgem_CodeFirstProject.DAL.Entities.AboutSecondBlog

@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Blog Kısmını Güncelle</button>
    <a href="/AdminAboutSecondBlog/Index/" class="btn btn-secondary">Değişikliklerden Vazgeç</a>
</form>



