@model List<Casgem_CodeFirstProject.DAL.Entities.Guide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rehber İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Unvanı</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td>@item.GuideName</td>
            <td>@item.GuideTitle</td>
            <td>@item.GuideImageUrl</td>
            <td><a href="/AdminGuide/DeleteGuide/@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminGuide/UpdateGuide/@item.GuideId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/AdminGuide/AddGuide" class="btn btn-outline-primary">Yeni Rehber Girişi</a>


