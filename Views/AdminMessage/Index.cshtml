@model List<Casgem_CodeFirstProject.DAL.Entities.Contact>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Gelen Kutusu</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Subject</td>
            <td><a href="/AdminMessage/DeleteMessage/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#exampleModalCenter">Mesajı Aç</button></td>
        </tr>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">@item.Subject</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @item.Message
                        <br /><br />
                        <b>@item.NameSurname</b>
                        <p>@item.Mail</p>
                        <p>@(((DateTime)item.MessageDate).ToString("f"))</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</table>

